{
  "references": [
    {
      "path": "./tests/tsconfig.test.json"
    }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "eslint.config.mjs",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}